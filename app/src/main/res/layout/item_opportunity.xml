<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="opportunity"
            type="com.moniumverse.educhip_app.model.opportunities.OpportunitiesModel" />

        <variable
            name="listener"
            type="com.moniumverse.educhip_app.view.OpportunityClickListener" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:onClick="@{listener.onOpportunityClicked}"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/opportunityId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(opportunity.id)}"
            android:visibility="gone" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:imageUrl="@{opportunity.opportunityImageUrl}"
            android:padding="4dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/opportunityName"
                style="@style/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{opportunity.opportunityName}" />


            <TextView
                android:id="@+id/opportunityDeadline"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{opportunity.opportunityDeadline}" />


        </LinearLayout>
    </LinearLayout>
</layout>