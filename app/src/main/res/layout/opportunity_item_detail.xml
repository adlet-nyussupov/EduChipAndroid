<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <import type="android.text.Html" />

        <variable
            name="opportunity"
            type="com.moniumverse.educhip_app.model.opportunities.OpportunitiesModel" />

        <variable
            name="palette"
            type="com.moniumverse.educhip_app.model.opportunities.OpportunityPalette" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@{palette.color}"
        >


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            tools:context=".view.opportunities.OpportunityDetailFragment">

            <ImageView
                android:id="@+id/opportunityImageDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:imageUrl="@{opportunity.opportunityImageUrl}"
                android:minHeight="200dp" />

            <TextView
                android:id="@+id/opportunityNameDetail"
                style="@style/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/opportunityImageDetail"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_margin="4dp"
                android:text="@{opportunity.opportunityName}"
                android:textSize="17sp"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/opportunityCountryDetail"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/opportunityNameDetail"
                android:layout_alignParentLeft="true"
                android:layout_margin="4dp"
                android:text="@{Html.fromHtml(@string/opportunity_country(opportunity.opportunityCountry))}"
                android:textSize="17sp"
                android:gravity="center_horizontal"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/opportunityDeadlineDetail"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/opportunityCountryDetail"
                android:layout_alignParentLeft="true"
                android:layout_margin="4dp"
                android:text="@{Html.fromHtml(@string/opportunity_deadline(opportunity.opportunityDeadline))}"
                android:textSize="17sp"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/opportunityPeriodDetail"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/opportunityDeadlineDetail"
                android:layout_alignParentLeft="true"
                android:layout_margin="4dp"
                android:text="@{Html.fromHtml(@string/opportunity_period(opportunity.opportunityPeriod))}"
                android:textSize="17sp"
                android:layout_alignParentStart="true" />


            <TextView
                android:id="@+id/opportunityDescriptionDetail"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/opportunityPeriodDetail"
                android:layout_alignParentLeft="true"
                android:layout_margin="4dp"
                android:text="@{Html.fromHtml(@string/opportunity_descr(opportunity.opportunityDescription))}"
                android:textSize="17sp"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/opportunityUrlDetail"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/opportunityDescriptionDetail"
                android:layout_alignParentLeft="true"
                android:layout_margin="4dp"
                android:text="@{Html.fromHtml(@string/opportunity_url(opportunity.opportunity_url))}"
                android:textSize="17sp"
                android:layout_alignParentStart="true" />


        </RelativeLayout>

    </ScrollView>
</layout>